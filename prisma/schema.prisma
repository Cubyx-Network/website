// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
    owner
    orga
    member
}

enum PositionType {
    builder
    developer
    commander
    resources
    socialmedia
    entertainment
    administator
}

model TeamMember {
  id              String    @id @default(uuid())
  username        String    @unique
  email           String    @unique
  password        String
  profile_picture Bytes
  description     String?   @db.Text
  discord_tag     String
  mc_username     String?
  position        Position[]
  createdAt       DateTime  @default(now())
  isAdmin         Boolean   @default(false)
  votes           Vote[]
  candidates      Candidate[]
  projects        Project[]
}

model Position {
  id              String       @id @default(uuid())
  teamMember      TeamMember[]
  positionType    PositionType
}

model Election {
  id              String    @id @default(uuid())
  name            String
  description     String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  endsAt          DateTime
  candidates      Candidate[]
  votes           Vote[]
}

model Candidate {
    id            String    @id @default(uuid())
    election      Election  @relation(fields: [electionId], references: [id])
    electionId    String
    user          TeamMember@relation(fields: [userId], references: [id])
    userId        String
    votes         Int       @default(0)
}

model Vote {
    id            String    @id @default(uuid())
    user          TeamMember@relation(fields: [userId], references: [id])
    userId        String
    election      Election  @relation(fields: [electionId], references: [id])
    electionId    String
    voted         Boolean   @default(false)
}

model Registration {
    id            String   @id @default(uuid())
    username      String
    email         String
}

model Link {
    id            String   @id @default(uuid())
    name          String
    url           String
}

model Project {
    id            String   @id @default(uuid())
    name          String
    description   String
    download_link String
    image_url     String
    authors       TeamMember[]
    releaseDate   DateTime
    projectPage   Json
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt
}