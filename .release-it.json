{
	"github": {
		"release": true,
		"commitMessage": "chore(release): v${version}",
		"draft": true,
		"comments": {
			"submit": true,
			"issue": ":rocket: _Dieses Issue wurde mit der Version v${version} veröffentlicht. Siehe [${releaseName}](${releaseUrl}) für die Changelogs._",
			"pr": ":rocket: Dieser Pull Request wurde mit der Version v${version} veröffentlicht. Siehe [${releaseName}](${releaseUrl}) für die Changelogs."
		}
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"preset": {
				"name": "conventionalcommits",
				"types": [
					{ "type": "feat", "section": "📕 Funktionen" },
					{ "type": "change", "section": "🔄 Änderungen" },
					{ "type": "fix", "section": "🪲 Fehlerbehebungen" },
					{ "type": "docs", "section": "📝 Dokumentation" },
					{ "type": "style", "section": "🎨 Designänderungen" },
					{ "type": "refactor", "section": "🔧 Code-Refactoring" },
					{ "type": "deps", "section": "⚙️ Abhängigkeiten" },
					{ "type": "content", "section": "📖 Inhaltsänderungen" },
					{ "type": "chore", "section": "🔧 Sonstige Änderungen" },
					{ "type": "test", "section": "🧪 Änderungen am Testing" },
					{ "type": "ci", "section": "🚀 CI/CD-Änderungen" }
				]
			},
			"infile": "CHANGELOG.md"
		}
	}
}
